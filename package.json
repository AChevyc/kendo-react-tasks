{
  "name": "@telerik/kendo-react-tasks",
  "description": "An internal utility package exporting gulp tasks for the Kendo React components infrastructure",
  "repository": {
    "type": "git",
    "url": "https://github.com/telerik/kendo-react-tasks.git"
  },
  "main": "gulp-tasks.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "Kendo UI",
    "React"
  ],
  "dependencies": {
    "@telerik/eslint-config": "1.1.0",
    "@telerik/kendo-common-tasks": "^1.0.0",
    "babel-core": "~6",
    "babel-loader": "^6.2.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-es2015-modules-umd": "~6",
    "babel-preset-es2015": "~6",
    "babel-preset-react": "~6",
    "babel-preset-stage-1": "~6",
    "babel-traverse": "6.3.19",
    "chai": "^3.5.0",
    "chai-jquery": "^2.0.0",
    "enzyme": "^2.0.0-rc1",
    "extract-text-webpack-plugin": "^0.9.1",
    "gulp-jasmine": "^2.2.1",
    "jasmine-reporters": "^2.1.1",
    "jasmine-spec-reporter": "^2.4.0",
    "jquery": "^2.2.1",
    "json-loader": "^0.5.4",
    "karma": "=0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.6",
    "karma-webpack": "^1.7.0",
    "phantomjs-prebuilt": ">=1.9",
    "react": "^0.14.3",
    "react-addons-test-utils": "^0.14.3",
    "react-dom": "^0.14.3",
    "source-map-loader": "^0.1.5"
  },
  "author": "Telerik",
  "license": "Apache-2.0",
  "devDependencies": {
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.3",
    "validate-commit-msg": "^1.1.1",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    }
  }
}
